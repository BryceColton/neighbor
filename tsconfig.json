{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",


    "module": "CommonJS",
    "target": "ES2020",
    "types": [],


    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": ["src"]
}
